sp {select*load
   (state <s> ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name loadYes)
   (<o2> ^name loadNo)
-->
   (<s> ^operator <o2> > <o1>)}


sp {select*hit*hard*less9
   (state <s> ^operator <o> +
              ^io.input-link.cards <cards>)
   (<cards> ^sum < 9
           -^soft)
   (<o> ^name hit)
-->
   (<s> ^operator <o> >)}

sp {select*hit*hard*dealerNOT3-6*9
   (state <s> ^operator <o> +
              ^io.input-link.cards <cards>
              ^io.input-link.dCards <dCards>)
   (<o> ^name hit)
   (<cards> ^sum 9
           -^soft)
  -(<dCards> ^card << 3 4 5 6 >>)
-->
   (<s> ^operator <o> >)}

